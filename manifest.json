{
    "manifest_version": 2,
    "name": "Google Classroom Extension",
    "version": "1.0",
    "description": "Retrieve deadlines from Google Classroom.",
    "permissions": [
      "tabs",
      "activeTab",
      "identity",
      "https://classroom.googleapis.com/*"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup.html"
    },
    "oauth2": {
      "client_id": "662004468767-h4725tg392bera623ra1bv763fa387uq.apps.googleusercontent.com",
      "scopes": [
        "https://www.googleapis.com/auth/classroom.courses.readonly",
        "https://www.googleapis.com/auth/classroom.student-submissions.me.readonly"
      ]
    },
    "content_scripts": [
      {
        "matches": ["https://*/*", "http://*/*"],
        "js": ["content.js"]
      }
    ],
    "content_security_policy": "script-src 'self' https://apis.google.com/js/api.js; object-src 'self'"
  }
  